@using Microsoft.AspNetCore.Http
 
@inject IHttpContextAccessor HttpContextAccessor

<aside class="main-sidebar elevation-4 sidebar-dark-success">
    <a href="/Home" class="brand-link navbar-success ">
        <img src="~/Assets/Images/upci_white.png" alt="Equicom Savings" class="brand-image"
             style="opacity: 1">
        <span class="brand-text font-weight-bold">UPCI Punturin</span>
    </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img id="profileImg" src="@HttpContextAccessor.HttpContext.Session.GetString("AppUrl")/Home?handler=UserProfileImage" class="img-circle elevation-2" alt="Profile Image" style="cursor:pointer; height:50px; width:50px;">
            </div>
            <div class="info">
                <a href="#" class="nav-link d-block">
                    <b>@HttpContextAccessor.HttpContext.Session.GetString("FullName")</b>
                </a>
            </div>
        </div>

        @if (@ViewData["Navigation"] != null)
        
        {
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column nav-flat nav-legacy nav-child-indent text-sm" data-widget="treeview" role="menu" data-accordion="false">
                    @Html.Raw(@ViewData["Navigation"])
                </ul> 
            </nav>

        }
    </div>
</aside>
 